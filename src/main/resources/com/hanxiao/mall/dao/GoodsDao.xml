<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanxiao.mall.dao.GoodsDao">
    <select id="getType" resultType="com.hanxiao.mall.model.Type">
        select id, name from t_type
    </select>

    <select id="getGoodsByTypeVO" resultType="com.hanxiao.mall.model.Goods">
        select id,name, typeId, image, stockNum, price, description from t_goods
    </select>
</mapper>